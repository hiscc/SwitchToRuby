<!DOCTYPE html>
<html>
  <head>
    <title>Rails2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= image_tag 'logo.png', alt:'logo' , width: '100px' %>
      <span class="title"><%= @page_title %></span>
    </div>
    <div id="columns">
      <div id="side">
        <div id="cart">
          <% if @cart %>
          <%= render @cart %>
          <% end %>
        </div>
        <ul>
          <li><a href="">Home</a></li>
          <li><a href="">Questions</a></li>
          <li><a href="">News</a></li>
          <li><a href="">Contact</a></li>
          <p><%= date_loaded %></p>
          <p><%= pluralize( counter, 'times') %></p>
        </ul>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
